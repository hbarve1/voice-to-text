{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@suki-ai/constants": ["libs/constants/src/index.ts"],
      "@suki-ai/react-components": ["libs/react-components/src/index.ts"],
      "@suki-ai/react-contexts": ["libs/react-contexts/src/index.ts"],
      "@suki-ai/react-hooks": ["libs/react-hooks/src/index.ts"],
      "@suki-ai/react-svg": ["libs/react-svg/src/index.ts"],
      "@suki-ai/utils": ["libs/utils/src/index.ts"],
      "@suki-ai/utils-node": ["libs/utils-node/src/index.ts"],
      "@suki-ai/utils-web": ["libs/utils-web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
